@{
    ViewData["Title"] = "Error";
    var code = Context.Request.Query["code"];
}

<section class="text-center py-5">
    <h1 class="display-5 fw-bold text-warning">Whoops!</h1>
    <p class="lead mb-4">
        An error occurred (HTTP @code).
    </p>

    @if (code == "404")
    {
        <p>The page you requested could not be found.</p>
    }
    else if (code == "403")
    {
        <p>You don't have permission to view this page.</p>
    }
    else
    {
        <p>Something unexpected happened. Please try again later.</p>
    }

    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary mt-3">Back to Home</a>
</section>
