@{
    ViewData["Title"] = "Home";
}

<section class="text-center text-white d-flex flex-column justify-content-center"
         style="min-height:80vh;
                background: radial-gradient(120% 90% at 50% 15%, #2b2d42 0%, #5a189a 55%, #4361ee 100%);
                ">
    <div class="container">
        <h1 class="display-3 fw-semibold mb-3">Aquent Helps You Empower Your Workflow</h1>
        <p class="lead mb-4">Manage Clients and Contacts in a Simple, Seamlessly Way.</p>

        <div class="d-flex justify-content-center flex-wrap gap-3">
            <a asp-controller="Clients" asp-action="Index" class="btn btn-light btn-lg px-4">
                <i class="bi bi-building"></i> Manage Clients
            </a>
            <a asp-controller="People" asp-action="Index" class="btn btn-outline-light btn-lg px-4">
                <i class="bi bi-people"></i> Manage People
            </a>
        </div>

        <p class="mt-5 small text-light-50">
            Built with ASP.NET Core 8, Entity Framework Core, and Bootstrap 5.
        </p>
    </div>
</section>
